<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_layout" />

    <ScrollView
        android:id="@+id/activity_shopping_details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56px">

                <ImageView
                    android:layout_width="22px"
                    android:layout_height="22px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="联系商家"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/activity_shopping_details_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32px"
                    android:text="123456789"
                    android:textColor="@color/them"
                    android:textSize="26px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.wingfac.laundry.weight.ListViewForScrollView
                android:id="@+id/activity_shopping_details_goods_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56px">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/details_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="订单号"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/activity_shopping_details_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32px"
                    android:text="123456789"
                    android:textColor="@color/them"
                    android:textSize="26px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108px">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:layout_marginRight="38px">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/activity_shopping_details_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2015-02-01 05:25:00"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="付款时间"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/activity_shopping_details_end_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2015-02-01 05:25:00"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoRelativeLayout>
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="26px"
                    android:layout_marginLeft="16px"
                    android:src="@drawable/description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="物流信息"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24px"
                    android:text="(本服务由XXX物流公司提供)"
                    android:textColor="@color/default_text"
                    android:textSize="20px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <ListView
                android:id="@+id/activity_shopping_details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20px"
                android:layout_marginTop="20px"
                android:divider="#00000000"
                android:dividerHeight="0dip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px">

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/like" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48px"
                    android:text="点赞好评"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />

                <ImageView
                    android:id="@+id/activity_shopping_details_good"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24px"
                    android:src="@drawable/dianzan" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="如果您对我们的服务非常满意,请不要忘记点赞哦!"
                    android:textColor="@color/gray_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_marginLeft="18px"
                    android:src="@drawable/pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="我的留言"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <TextView
                android:id="@+id/activity_shopping_details_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:textColor="@color/default_text"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>


</com.zhy.autolayout.AutoLinearLayout>