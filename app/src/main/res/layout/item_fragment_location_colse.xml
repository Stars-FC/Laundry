<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="296px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="224px">

            <ImageView
                android:id="@+id/item_fragment_location_close_img"
                android:layout_width="124px"
                android:layout_height="132px"
                android:layout_centerVertical="true"
                android:src="@drawable/yi"
                android:layout_marginLeft="20px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="170px"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_fragment_location_close_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="洗衣柜名称1"
                        android:textColor="@color/default_text"
                        android:textSize="26px" />

                    <TextView
                        android:id="@+id/item_fragment_location_close_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20px"
                        android:text="235m"
                        android:textColor="@color/them"
                        android:textSize="26px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10px"
                    android:background="@color/border" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="洗衣柜的总数量"
                        android:textColor="@color/default_text"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/item_fragment_location_close_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="50"
                        android:textColor="@color/them"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已用洗衣柜数量"
                        android:textColor="@color/default_text"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/item_fragment_location_close_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="20"
                        android:textColor="@color/them"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余洗衣柜数量"
                        android:textColor="@color/default_text"
                        android:textSize="24px" />

                    <TextView
                        android:id="@+id/item_fragment_location_close_surplus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:text="10"
                        android:textColor="@color/them"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:id="@+id/item_fragment_location_close_address"
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:layout_marginLeft="14px"
            android:layout_marginRight="14px"
            android:background="@drawable/search_bg"
            android:padding="10px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border" />
</com.zhy.autolayout.AutoLinearLayout>