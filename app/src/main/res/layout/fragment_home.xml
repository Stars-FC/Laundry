<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="@color/them">

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="38px"
            android:layout_height="44px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/white_location" />

        <TextView
            android:id="@+id/head_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="欢迎使用洗衣柜APP"
            android:textColor="@color/white"
            android:textSize="30px" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/head_layout_right"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_alignParentBottom="true"
                android:src="@drawable/chat" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/fragment_home_num_layout"
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:background="@drawable/white_message">

                <TextView
                    android:id="@+id/fragment_home_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/them"
                    android:textSize="14px" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <ScrollView
        android:id="@+id/fragment_home_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fragment_home_head"
                android:layout_width="match_parent"
                android:layout_height="320px"
                android:scaleType="centerCrop" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8px"
                    android:layout_height="30px"
                    android:layout_marginLeft="22px"
                    android:background="@color/them" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:text="洗衣"
                    android:textColor="@color/default_text"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:gravity="center_vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/fragment_home_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28px"
                        android:text="我要洗衣"
                        android:textColor="@color/default_text"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="28px"
                        android:background="@drawable/blue_text"
                        android:gravity="center"
                        android:paddingBottom="5px"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:paddingTop="5px"
                        android:text="让您放心的服务"
                        android:textColor="@color/them"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="78px"
                        android:layout_height="78px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="26px"
                        android:src="@drawable/close" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/border" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/fragment_home_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28px"
                        android:text="我要取衣"
                        android:textColor="@color/default_text"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="28px"
                        android:background="@drawable/blue_text"
                        android:gravity="center"
                        android:paddingBottom="5px"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:paddingTop="5px"
                        android:text="让您放心的服务"
                        android:textColor="@color/them"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="78px"
                        android:layout_height="78px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="26px"
                        android:src="@drawable/scope" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="128px"
                android:gravity="center_vertical">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/fragment_home_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28px"
                        android:text="会员充值"
                        android:textColor="@color/default_text"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="28px"
                        android:background="@drawable/blue_text"
                        android:gravity="center"
                        android:paddingBottom="5px"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:paddingTop="5px"
                        android:text="让您放心的服务"
                        android:textColor="@color/them"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="78px"
                        android:layout_height="78px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="26px"
                        android:src="@drawable/price" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/border" />

                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/fragment_home_complaint"
                    android:layout_width="wrap_content"
                    android:layout_height="78px"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="28px"
                        android:text="联系客服"
                        android:textColor="@color/default_text"
                        android:textSize="26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="28px"
                        android:background="@drawable/blue_text"
                        android:gravity="center"
                        android:paddingBottom="5px"
                        android:paddingLeft="10px"
                        android:paddingRight="10px"
                        android:paddingTop="5px"
                        android:text="让您放心的服务"
                        android:textColor="@color/them"
                        android:textSize="20px" />

                    <ImageView
                        android:layout_width="78px"
                        android:layout_height="78px"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="26px"
                        android:src="@drawable/service" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/fragment_home_wash_bottom"
                android:layout_width="match_parent"
                android:layout_height="122px"
                android:visibility="gone">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12px"
                    android:layout_marginLeft="32px"
                    android:layout_marginRight="32px"
                    android:layout_marginTop="12px"
                    android:background="@drawable/blue_layout"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="76px"
                        android:layout_height="76px"
                        android:layout_marginLeft="10px"
                        android:src="@drawable/message" />

                    <TextView
                        android:id="@+id/fragment_home_message_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="18px"
                        android:text="您有一个快递包裹至二十一世纪大厦A座1917，取件码【554122】，请您尽快取件"
                        android:textColor="@color/them"
                        android:textSize="24px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="68px"
                android:gravity="center_vertical">

                <View
                    android:layout_width="8px"
                    android:layout_height="30px"
                    android:layout_marginLeft="22px"
                    android:background="@color/them" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14px"
                    android:text="商城"
                    android:textColor="@color/default_text"
                    android:textSize="28px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vPager"
                android:layout_width="match_parent"
                android:layout_height="440px"></android.support.v4.view.ViewPager>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"></com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="120px"
                android:background="@color/white" />
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>