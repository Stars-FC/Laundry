<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/head_layout" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_complaint_suggestion"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_below="@+id/rl_title">

        <ImageView
            android:id="@+id/iv_complaint_suggestion"
            android:layout_width="57px"
            android:layout_height="57px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="95px"
            android:scaleType="fitXY"
            android:src="@drawable/complaint_suggestion" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/iv_complaint_suggestion"
            android:gravity="center_vertical"
            android:text="17703199910"
            android:textColor="#209bf1"
            android:textSize="43px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_below="@+id/rl_complaint_suggestion"
        android:background="#eeeeee" />

    <TextView
        android:layout_width="525px"
        android:layout_height="80px"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:text="如果您有投诉等相关事宜的问题，请拨打以上联系电话！"
        android:textColor="#666666"
        android:textSize="30px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="130px"
            android:text="河北文扬网络科技有限公司"
            android:textColor="@color/gray_text"
            android:textSize="24px"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100px"
            android:text="备案号：冀ICP备17023887号"
            android:textColor="@color/gray_text"
            android:textSize="24px"
            android:layout_centerHorizontal="true"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>