<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_navigation_content">

    <include layout="@layout/head_layout" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="308px"
                android:background="@drawable/add_big"
                android:scaleType="centerCrop"
                android:orientation="vertical"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:orientation="horizontal">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/main_left_two_level_title_line"
                        android:layout_width="130px"
                        android:layout_height="6px"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#0081da"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/main_left_two_level_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center"
                        android:text="左边标题"
                        android:textColor="#333333"
                        android:textSize="34px" />
                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <View
                        android:id="@+id/main_right_two_level_title_line"
                        android:layout_width="130px"
                        android:layout_height="6px"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="#0081da"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/main_right_two_level_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:button="@null"
                        android:gravity="center"
                        android:text="右边标题"
                        android:textColor="#333333"
                        android:textSize="34px" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#eeeeee"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/activity_appointment_wash_left_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />

                <ListView
                    android:id="@+id/activity_appointment_wash_right_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>