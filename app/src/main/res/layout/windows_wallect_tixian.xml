<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/center_layout"
        android:layout_width="402px"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56px"
            android:background="@drawable/top_circular"
            android:gravity="center">

            <TextView
                android:id="@+id/windows_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额"
                android:textColor="@color/them"
                android:textSize="22px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:background="@color/them" />

        <TextView
            android:id="@+id/windows_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44px"
            android:text="请输入提现金额:"
            android:textColor="@color/default_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/windows_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginTop="20px"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/default_text"
            android:textSize="26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="44px"
            android:text="请输入支付宝账号:"
            android:textColor="@color/default_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/windows_three_zhang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:layout_marginTop="20px"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/default_text"
            android:textSize="26px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="70px"
            android:layout_marginRight="70px"
            android:background="@color/black" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:layout_marginRight="54px"
            android:layout_marginTop="98px">

            <Button
                android:id="@+id/windows_quxiao"
                android:layout_width="128px"
                android:layout_height="44px"
                android:background="@drawable/red_button"
                android:text="取消"
                android:textColor="#e24d4c"
                android:textSize="24px" />

            <Button
                android:id="@+id/windows_queding"
                android:layout_width="128px"
                android:layout_height="44px"
                android:layout_alignParentRight="true"
                android:background="@drawable/black_button"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="24px"
            android:background="@color/white" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>