<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:id="@+id/content_layout">

    <include layout="@layout/head_layout" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/cv_vip"
        android:layout_width="match_parent"
        android:layout_height="382px"
        android:layout_below="@+id/rl_title"
        android:layout_margin="0px"
        android:background="@color/border">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="510px"
            android:layout_height="322px"
            android:layout_centerInParent="true"
            android:layout_marginTop="28px"
            android:src="@drawable/recharge" />

        <RelativeLayout
            android:layout_width="500px"
            android:layout_height="312px"
            android:layout_centerInParent="true"
            android:layout_marginTop="28px">

            <TextView
                android:id="@+id/recharge_vip_yue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10px"
                android:text="余额: 530.00"
                android:textColor="@color/white"
                android:textSize="24px"/>

            <TextView
                android:id="@+id/recharge_vip_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10px"
                android:text="NO: 0000001"
                android:textColor="@color/white"
                android:textSize="24px"/>
        </RelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <LinearLayout
        android:id="@+id/ll_recharge500"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_below="@+id/cv_vip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="5px"
            android:layout_height="28px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="33px"
            android:background="#209bf1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="充值金额"
            android:layout_marginLeft="14px"
            android:textSize="26px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="500"
            android:textColor="#209bf1" />

        <CheckBox
            android:id="@+id/recharge_vip_one"
            android:layout_width="27px"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginRight="6px"
            android:background="@drawable/selector_checkbox_contact"
            android:button="@null"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="598px"
        android:layout_height="1px"
        android:layout_below="@+id/ll_recharge500"
        android:layout_centerHorizontal="true"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/ll_recharge1000"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <TextView
            android:layout_width="5px"
            android:layout_height="28px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="33px"
            android:background="#209bf1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="充值金额"
            android:layout_marginLeft="14px"
            android:textSize="26px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="1000"
            android:textColor="#209bf1" />

        <CheckBox
            android:id="@+id/recharge_vip_two"
            android:layout_width="27px"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginRight="6px"
            android:background="@drawable/selector_checkbox_contact"
            android:button="@null"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="598px"
        android:layout_height="1px"
        android:layout_below="@+id/ll_recharge1000"
        android:layout_centerHorizontal="true"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/ll_recharge2000"
        android:layout_width="match_parent"
        android:layout_height="66px"
        android:layout_below="@+id/view1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="5px"
            android:layout_height="28px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="33px"
            android:background="#209bf1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="充值金额"
            android:layout_marginLeft="14px"
            android:textSize="26px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="35px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2000"
            android:textColor="#209bf1" />

        <CheckBox
            android:id="@+id/recharge_vip_three"
            android:layout_width="27px"
            android:layout_height="20px"
            android:layout_gravity="center"
            android:layout_marginRight="6px"
            android:background="@drawable/selector_checkbox_contact"
            android:button="@null"
            android:clickable="false"
            android:focusable="false" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="598px"
        android:layout_height="1px"
        android:layout_below="@+id/ll_recharge2000"
        android:layout_centerHorizontal="true"
        android:background="#eeeeee" />

    <Button
        android:id="@+id/go"
        android:layout_width="510px"
        android:layout_height="74px"
        android:layout_below="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127px"
        android:background="@drawable/shape_recharge_vip_button"
        android:text="去充值"
        android:textColor="#ffffff"
        android:textSize="31px" />
</com.zhy.autolayout.AutoLinearLayout>