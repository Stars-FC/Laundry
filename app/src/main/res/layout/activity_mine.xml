<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/head_layout" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/activity_mine_icon_layout"
        android:layout_width="match_parent"
        android:layout_height="144px">

        <com.wingfac.laundry.weight.CircleImageView
            android:id="@+id/activity_mine_icon_img"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="22px"
            android:src="@drawable/default_icon" />

        <ImageView
            android:layout_width="16px"
            android:layout_height="26px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22px"
            android:src="@drawable/more" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="@color/border" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="32px"
            android:src="@drawable/user" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="用户名:"
            android:textColor="@color/gray_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/activity_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:textColor="@color/gray_text"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22px"
        android:background="@color/border" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="32px"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="联系电话:"
            android:textColor="@color/gray_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/activity_mine_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:textColor="@color/gray_text"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22px"
        android:background="@color/border" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="32px"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="登录密码:"
            android:textColor="@color/gray_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/activity_mine_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/gray_text"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22px"
        android:background="@color/border" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="28px"
            android:layout_height="28px"
            android:layout_marginLeft="32px"
            android:src="@drawable/phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18px"
            android:text="支付密码:"
            android:textColor="@color/gray_text"
            android:textSize="26px" />

        <EditText
            android:id="@+id/activity_mine_pay_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="@null"
            android:inputType="textPassword"
            android:textColor="@color/gray_text"
            android:textSize="26px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22px"
        android:background="@color/border" />
</com.zhy.autolayout.AutoLinearLayout>