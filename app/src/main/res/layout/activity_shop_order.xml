<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/content_layout">

    <include layout="@layout/head_layout" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56px">

                <ImageView
                    android:layout_width="22px"
                    android:layout_height="22px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="联系商家"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/activity_shop_order_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32px"
                    android:text="123456789"
                    android:textColor="@color/them"
                    android:textSize="26px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />
            <com.wingfac.laundry.weight.ListViewForScrollView
                android:id="@+id/activity_shopping_details_goods_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dip"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56px">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/details_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="订单号"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/activity_shop_order_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32px"
                    android:text="123456789"
                    android:textColor="@color/them"
                    android:textSize="26px" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="108px">

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="64px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:layout_marginRight="38px">

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下单时间"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/activity_shop_order_start_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="2015-02-01 05:25:00"
                            android:textColor="@color/default_text"
                            android:textSize="24px" />
                    </com.zhy.autolayout.AutoRelativeLayout>


                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <RelativeLayout
                android:id="@+id/activity_shop_order_address_layout"
                android:layout_width="match_parent"
                android:layout_height="60px">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/icon_address" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="42px"
                    android:text="收货地址"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <ImageView
                    android:layout_width="16px"
                    android:layout_height="26px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32px"
                    android:src="@drawable/more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px">

                <TextView
                    android:id="@+id/activity_shop_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:textColor="@color/gray_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"
                android:visibility="gone"/>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60px"
                android:visibility="gone">

                <ImageView
                    android:layout_width="28px"
                    android:layout_height="28px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/description" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48px"
                    android:text="商品描述"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border"
                android:visibility="gone"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:visibility="gone">

                <TextView
                    android:id="@+id/activity_shop_order_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20px"
                    android:textColor="@color/gray_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24px"
                    android:layout_height="24px"
                    android:layout_marginLeft="18px"
                    android:src="@drawable/pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="我要留言"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:focusable="true"
                android:focusableInTouchMode="true"  >

                <EditText
                    android:id="@+id/activity_shop_order_word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20px"
                    android:background="@null"
                    android:textColor="@color/default_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/activity_shop_order_pay"
                    android:layout_width="510px"
                    android:layout_height="74px"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_recharge_vip_button"
                    android:layout_marginTop="20px"
                    android:text="付款"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>



</com.zhy.autolayout.AutoLinearLayout>