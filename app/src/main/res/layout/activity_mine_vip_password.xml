<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/content_layout">

    <include layout="@layout/head_layout" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_payment_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="5px"
            android:layout_height="28px"
            android:layout_marginLeft="17px"
            android:layout_marginTop="14px"
            android:scaleType="fitXY"
            android:src="@drawable/rectangle_vip" />

        <TextView
            android:id="@+id/activity_mine_vip_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8px"
            android:layout_marginTop="14px"
            android:background="@null"
            android:hint="当前会员卡密码"
            android:inputType="textPassword"
            android:textSize="25px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/activity_mine_vip_password_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:inputType="textPassword"
        android:layout_marginTop="6px"
        android:textColor="@color/default_text"
        android:textSize="25px"
        android:text="68745152"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_payment_password"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="6px"
        android:background="#eeeeee" />
</com.zhy.autolayout.AutoLinearLayout>