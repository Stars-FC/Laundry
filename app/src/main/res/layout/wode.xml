<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2f2fc">

    <TextView
        android:id="@+id/tv_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="257px"
        android:text="忘记密码"
        android:textColor="#209bf1"
        android:textSize="80px" />

    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="450px"
        android:layout_height="263px"
        android:layout_below="@+id/tv_forgot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95px"
        android:background="@drawable/shape_rl_background">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_marginBottom="2px"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="#ffffff"
            android:hint="手机号"
            android:textColorHint="#209bf1"
            android:textSize="23px" />

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="70px"
            android:layout_height="69px"
            android:layout_marginBottom="2px"
            android:background="#ffffff"
            android:padding="24px"
            android:src="@drawable/wode" />

        <RelativeLayout
            android:id="@+id/rl_code"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_below="@+id/et_phone"
            android:layout_marginBottom="2px"
            android:background="#ffffff">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_code"
                android:layout_toRightOf="@+id/iv_code"
                android:background="#ffffff"
                android:hint="验证码"
                android:textColorHint="#209bf1"
                android:textSize="23px" />

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="70px"
                android:layout_height="69px"
                android:background="#ffffff"
                android:padding="24px"
                android:src="@drawable/mima" />

            <Button
                android:id="@+id/btn_code"
                android:layout_width="100px"
                android:layout_height="30px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:background="@drawable/shape_btn_code"
                android:text="获取验证码"
                android:textColor="#209bf1"
                android:textSize="18px" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="69px"
            android:layout_below="@+id/rl_code"
            android:layout_marginBottom="2px"
            android:layout_toRightOf="@+id/iv_input"
            android:background="#ffffff"
            android:hint="输入密码"
            android:textColorHint="#209bf1"
            android:textSize="23px" />

        <ImageView
            android:id="@+id/iv_input"
            android:layout_width="70px"
            android:layout_height="69px"
            android:layout_below="@+id/rl_code"
            android:layout_marginBottom="2px"
            android:background="#ffffff"
            android:padding="24px"
            android:src="@drawable/mima" />

        <EditText
            android:id="@+id/et_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/et_input"
            android:layout_toRightOf="@+id/iv_input"
            android:background="#ffffff"
            android:hint="确认密码"
            android:textColorHint="#209bf1"
            android:textSize="23px" />

        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="70px"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_input"
            android:background="#ffffff"
            android:padding="24px"
            android:src="@drawable/mima" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="450px"
        android:layout_height="50px"
        android:layout_below="@+id/rl_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:background="@drawable/shape_button"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="30px" />

</com.zhy.autolayout.AutoRelativeLayout>