<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="@color/white">

        <View
            android:id="@+id/item_shopping_logistics_view"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="90px"
            android:layout_marginRight="212px"
            android:background="@color/border" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="66px">

            <View
                android:layout_width="4px"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/dot" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="12px"
                android:layout_height="12px"
                android:background="@drawable/logistics_shape" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_wash_logistics_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖家发货"
                android:textColor="@color/default_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/item_wash_logistics_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:text="2017-02-23 23:23:24"
                android:textColor="@color/default_text"
                android:textSize="24px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>