<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/activity_wash_details_content">

    <include layout="@layout/head_layout" />

    <ScrollView
        android:id="@+id/activity_wash_details_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56px"
                android:visibility="gone">

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/activity_wash_details_lla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="44px"
                    android:text="预约倒计时"
                    android:textColor="@color/them"
                    android:textSize="26px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10px"
                    android:layout_toRightOf="@+id/activity_wash_details_lla"
                    android:text="(倒计时为0则自动取消订单)"
                    android:textColor="@color/default_text"
                    android:textSize="20px" />

                <TextView
                    android:id="@+id/activity_wash_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="28px"
                    android:text="12:00:00"
                    android:textColor="@color/them"
                    android:textSize="22px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.wingfac.laundry.weight.ListViewForScrollView
                android:id="@+id/activity_wash_details_wash_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dp" />


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="54px">

                <ImageView
                    android:id="@+id/activity_wash_details_lsd"
                    android:layout_width="22px"
                    android:layout_height="24px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/details_order" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14px"
                    android:layout_toRightOf="@+id/activity_wash_details_lsd"
                    android:text="订单号"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />

                <TextView
                    android:id="@+id/activity_wash_details_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:text="1354641354"
                    android:textColor="@color/default_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <ListView
                android:id="@+id/activity_wash_details_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="0dp" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/two_code" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="取件二维码"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="74px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activity_wash_details_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50px"
                    android:text="点击查看"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_marginLeft="36px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/key" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="取件口令"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activity_wash_details_kouling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="XXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/default_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/map" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="预约柜位置"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="72px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activity_wash_details_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="位置XXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/default_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="62px"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26px"
                    android:layout_height="26px"
                    android:layout_marginLeft="14px"
                    android:src="@drawable/pen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="我的留言"
                    android:textColor="@color/default_text"
                    android:textSize="26px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/activity_wash_details_liuyan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="44px"
                    android:text="XXXXXXXXXXXXXXXXXXX"
                    android:textColor="@color/default_text"
                    android:textSize="24px" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>